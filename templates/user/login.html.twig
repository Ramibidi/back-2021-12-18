{% extends 'base.html.twig' %}

{% block title %}Hello !
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>
			Login
		</h1>

		

		<form action="{{ path('api/login_check') }}" method="POST">

			<div class="form-group">
				<label for="username">
					User Name:
				</label>

				<input type="text" name="_username" id="username" class="form-control">

			</div>

			<br/>
			<div class="form-group">

				<label for="password">
					Password:
				</label>

				<input type="password" name="_password" id="password" class="form-control">
				<br/>
			</div>

			<button class="btn btn-info pull-right">
				Connect
			</button>

		</form>

        

	</div>
{% endblock %}
